<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_adress_bei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="北京两路东129"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_fangwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="北"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_xuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/img_addimage"
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/picbtn"

               />

            <ImageView
                android:id="@+id/img_delete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-8dip"
                android:padding="10dip"
                android:src="@drawable/delete_bg"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/img_etid"
                android:layout_toRightOf="@id/img_addimage"
                android:layout_alignTop="@id/img_addimage"
                android:layout_alignBottom="@id/img_addimage"
                android:layout_width="80dp"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/etid"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
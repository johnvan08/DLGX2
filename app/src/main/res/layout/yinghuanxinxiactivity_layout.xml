<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<include
    android:id="@+id/il"
    layout="@layout/title_items"/>
<ScrollView
android:layout_below="@id/il"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="隐患等级"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/shuxian" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_yinghuandengji"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textSize="18sp" />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:entries="@array/yinghuandengji"
                    />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_height="50dp"
                android:background="@color/two"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="隐患类型"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_yinghuanleixing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textSize="18sp" />
                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:entries="@array/yinghuanleixing"
                        />
                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:background="@color/there"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="隐患备注"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />

                <EditText
                    android:id="@+id/et_yinghuanbeizhu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="必填字段"
                    android:background="@null"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="隐患位置"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />

                <EditText
                    android:id="@+id/et_yinghuanweizhi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="必填字段"
                    android:background="@null"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/there"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="经度"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_jingdu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textSize="18sp" />
                    <Button
                        android:id="@+id/btn_endcheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp"
                        android:text="选取经纬度"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="纬度"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />

                    <TextView
                        android:id="@+id/tv_weidu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:background="@color/there"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="日期"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />

                <EditText
                    android:id="@+id/et_riqi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@color/two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="作业单位"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/shuxian" />
                <EditText
                    android:id="@+id/et_zuoyedanwei"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:hint="必填字段"
                    android:textSize="18sp" />
            </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="2dp"
        android:id="@+id/view"
        android:layout_alignLeft="@id/ll"
        android:layout_alignRight="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/shuxian" />
    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/shuxian"
        android:layout_toLeftOf="@id/ll"
        android:layout_alignTop="@id/ll"
        android:layout_alignBottom="@id/ll"/>
    <View
        android:id="@+id/view_di"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/shuxian"
        android:layout_below="@id/ll"
        android:layout_alignLeft="@id/ll"
        android:layout_alignRight="@id/ll"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/shuxian"
        android:layout_toRightOf="@id/ll"
        android:layout_alignTop="@id/ll"
        android:layout_alignBottom="@id/ll"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/ll_photo"
        android:layout_below="@id/view_di"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐患照片"
            android:textSize="18sp" />
        <GridView
            android:id="@+id/noScrollgridview"
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_marginLeft="5dp"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll_photo"
        android:id="@+id/btn_finish"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        />
</RelativeLayout>
</ScrollView>
    </RelativeLayout>
